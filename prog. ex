# 5
start = int(input("How many pizza slices did you start with? "))
eaten = int(input("How many slices have you eaten? "))
print("Slices left:", start - eaten)
 
# 6
name = input("Enter your name: ")
age = int(input("Enter your age: "))
print("Hello", name + ", next year you will be", age + 1, "years old.")
 
# 7
bill = float(input("Enter total bill: "))
diners = int(input("Enter number of diners: "))
print("Each person must pay:", bill / diners)
 
# 8
days = int(input("Enter number of days: "))
print("Hours:", days * 24)
print("Minutes:", days * 24 * 60)
print("Seconds:", days * 24 * 60 * 60)
 
# 9
kg = float(input("Enter weight in kilograms: "))
print("There are", kg * 2.204, "pounds in", kg, "kilograms.")